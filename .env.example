# LlamaSearch AI Environment Configuration Example
# Rename this file to .env and update with your actual values

# API and Service Configuration
LLAMASEARCH_API_HOST=0.0.0.0
LLAMASEARCH_API_PORT=8000
LLAMASEARCH_API_WORKERS=4
LLAMASEARCH_DEBUG=false
LLAMASEARCH_LOG_LEVEL=INFO

# Security
LLAMASEARCH_SECRET_KEY=change-this-to-a-random-secure-string
LLAMASEARCH_API_KEY_HEADER=X-API-Key
LLAMASEARCH_ACCESS_TOKEN_EXPIRE_MINUTES=30
LLAMASEARCH_ALLOWED_HOSTS=localhost,127.0.0.1
LLAMASEARCH_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database
LLAMASEARCH_DATABASE_URL=sqlite:///llamasearch.db
# LLAMASEARCH_REDIS_URL=redis://localhost:6379/0

# AI/ML
OPENAI_API_KEY=sk-your-openai-api-key
LLAMASEARCH_DEFAULT_MODEL=gpt-3.5-turbo

# Metasearch
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CX=your-google-custom-search-id
BING_API_KEY=your-bing-api-key

# Vector DB
# LLAMASEARCH_VECTOR_DB_URL=http://localhost:6333
LLAMASEARCH_VECTOR_DB_TYPE=qdrant

# Personalization
LLAMASEARCH_PERSONALIZATION_ENABLED=true
LLAMASEARCH_PRIVACY_LEVEL=high

# MLX Support
LLAMASEARCH_USE_MLX=false

# Storage
LLAMASEARCH_STORAGE_DIR=./storage

# Dashboard
LLAMASEARCH_DASHBOARD_HOST=0.0.0.0
LLAMASEARCH_DASHBOARD_PORT=8050

# Feature Flags (JSON format)
# LLAMASEARCH_FEATURES={"metasearch":true,"vector":true,"personalization":true,"blockchain":false,"voice":false,"monitor":true,"scheduler":true,"notifications":true,"backup":true,"simulator":false} 